{
  "name": "amnesty",
  "private": true,
  "scripts": {
    "dev": "yarn install --frozen-lockfile && concurrently --kill-others-on-fail --names app,_db --prefix-colors blue.inverse,green 'yarn dev:start:app' 'yarn dev:start:db'",
    "dev:start:db": "docker compose up -d",
    "dev:start:app": "wait-on tcp:5432 --interval 5000 && yarn db:migrate:dev && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:migrate:dev": "prisma migrate dev && prisma generate",
    "db:migrate:prod": "prisma migrate deploy"
  },
  "dependencies": {
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@mui/material": "^5.2.1",
    "@prisma/client": "3.5.0",
    "next": "12.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.10",
    "@types/react": "17.0.37",
    "concurrently": "^6.4.0",
    "eslint": "7",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.5.0",
    "prisma": "3.5.0",
    "typescript": "4.5.2",
    "wait-on": "^6.0.0"
  }
}
